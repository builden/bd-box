{
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "^1.3.9",
    "eslint": "^10.0.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mint": "^4.2.345",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "lint-staged": {
    "**/*.{html,json,css,scss,md,mdx}": [
      "bun prettier --write"
    ],
    "**/*.{ts,tsx}": [
      "sh -c 'tsc --noEmit'",
      "bun eslint --fix",
      "bun prettier --write"
    ]
  },
  "name": "bd-box",
  "private": true,
  "scripts": {
    "docs:dev": "mint dev",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "lint": "eslint . --fix",
    "prepare": "husky",
    "test": "echo 'Run tests in individual packages'",
    "test:color": "cd packages/bd-color && bun test",
    "test:lunar": "cd packages/bd-lunar && bun test",
    "test:mermaid": "cd packages/vscode-md-mermaid && bun run test",
    "typecheck": "tsc --noEmit"
  },
  "workspaces": [
    "packages/*"
  ]
}