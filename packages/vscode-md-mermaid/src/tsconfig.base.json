{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "../../dist",
    "rootDir": "../..",
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
